[Desktop Entry]
Name=plasmastorm
Comment=Stormy Drifting Scenes
Type=Application
StartupNotify=true
Terminal=false

Exec=plasmastorm 1>$HOME/.plasmastormStdout 2>$HOME/.plasmastormStderr
Icon=plasmastorm.png

Categories=Game;
Keywords=Storm; Snow;

Actions=start;nomenu;

[Desktop Action start]
Name=Start plasmastorm
Exec=plasmastorm

[Desktop Action nomenu]
Name=Start without menu
Exec=plasmastorm -hidemenu
